# Server
NODE_ENV=development
PORT=4000
APP_URL=http://localhost:4000
FRONTEND_URL=http://localhost:8081
LOG_LEVEL=info

# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/precisiontracker
SQLITE_STORAGE=./data/dev.sqlite
SYNC_PAGE_SIZE=200

# Authentication
JWT_SECRET=replace-with-a-long-random-string
JWT_REFRESH_SECRET=replace-with-another-long-random-string
JWT_ISSUER=precisiontracker
JWT_AUDIENCE=precisiontracker-clients
JWT_EXPIRES_IN=7d

# Storage
STORAGE_DRIVER=local
LOCAL_STORAGE_DIR=./storage

# S3 / R2 (required when STORAGE_DRIVER=s3)
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_REGION=us-east-1
S3_BUCKET=precisiontracker
S3_ENDPOINT=
S3_FORCE_PATH_STYLE=false
S3_PRESIGNED_EXPIRATION=900
S3_PUBLIC_BASE_URL=

# Attachments
PRESIGNED_UPLOAD_TTL_SECONDS=900

# Email
EMAIL_PROVIDER=smtp
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM="PrecisionTracker <no-reply@precisiontracker.local>"
RESEND_API_KEY=
SUPPORT_EMAIL=support@precisiontracker.local
SERVICE_EMAIL=reminders@precisiontracker.local

# Reminders
ENABLE_REMINDERS=false
REMINDER_CRON=*/5 * * * *

# Monitoring
SENTRY_DSN=
